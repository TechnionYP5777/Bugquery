<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="org.eclipse.ui.commands">
      <category
            name="BugQuery Commands"
            id="bugquery.commands">
      </category>
      <command
            name="Get Trace from Console"
            categoryId="bugquery.commands"
            id="bugquery.commands.fromconsole">
      </command>
      <command
            name="Get Trace from Clipboard"
            categoryId="bugquery.commands"
            id="bugquery.commands.fromclipboard">
      </command>
      <command
      		defaultHandler="bugquery.actions.FromConsole"
            id="bugquery.commands.dropdownmenu"
            name="BugQuery Toolbar">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            commandId="bugquery.commands.fromconsole"
            class="bugquery.actions.FromConsole">
      </handler>
      <handler
            commandId="bugquery.commands.fromclipboard"
            class="bugquery.actions.FromClipboard">
      </handler>
   </extension>
   <extension
         point="org.eclipse.ui.bindings">
      <key
            commandId="bugquery.commands.fromconsole"
            contextId="org.eclipse.ui.contexts.window"
            sequence="M1+6"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration">
      </key>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="menu:bugquery.commands.dropdownmenu">
         <command
               commandId="bugquery.commands.fromclipboard"
               label="Trace from Clipboard"
               style="push">
         </command>
         <command
               commandId="bugquery.commands.fromconsole"
               label="Trace from Console"
               style="push">
         </command>
      </menuContribution>
      <menuContribution
            locationURI="toolbar:org.eclipse.ui.main.toolbar?after=additions">
         <toolbar
               id="toolbarmenu">
            <command
                  commandId="bugquery.commands.dropdownmenu"
                  icon="icons/bugquery.gif"
                  label="BugQuery Toolbar"
                  style="pulldown">
            </command>
         </toolbar>
      </menuContribution>
   </extension>
</plugin>
